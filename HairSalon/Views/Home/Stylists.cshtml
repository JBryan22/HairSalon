@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="headline">Stylists:</h2>
        <h3 class="headline">Click On A Stylist To View Clients</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if(@Model.Count == 0)
        {
            <p>You currently have no stylists added to your salon. Click on the button below to add a stylist!</p>
        }
    </div>
    <div class="col-md-12">
        <ul class="list-group">
            @foreach (var stylist in @Model)
            {
                <a class="contact-list list-group-item" href="/stylist/@stylist.GetId()">@stylist.GetName()
                    <li>
                        <form action="/stylist/@stylist.GetId()/remove">
                            <button class="btn btn-danger btn-xs remove glyphicon glyphicon-remove" type="submit"></button>
                        </form>
                        <form action="/stylist/@stylist.GetId()/update">
                            <button class="btn btn-default btn-xs update glyphicon glyphicon-pencil" type="submit"></button>
                        </form>
                    </li>
                </a>
            }
         </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a href="/stylist/add" class="btn btn-default">Add A Stylist</a>
    </div>
</div>